AddDefaultCharset UTF-8
Options -Indexes

RewriteEngine On

# HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Canonical
RewriteCond %{HTTP_HOST} !^turko\.by$ [NC]
RewriteRule ^ https://turko.by%{REQUEST_URI} [R=301,L]

# Remove index.html
RewriteCond %{THE_REQUEST} \s/+(.*/)?index\.html[\s?] [NC]
RewriteRule ^(.*/)?index\.html$ https://turko.by/$1 [R=301,L]

# -------------------------------------------------
# EXCLUDE JSON FROM REWRITE
# -------------------------------------------------
RewriteRule \.json$ - [L]

# Pretty URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# GZIP (SAFE)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

ErrorDocument 404 /404.html
ErrorDocument 403 /403.html


# -------------------------------------------------
# BROWSER CACHING
# -------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On

  # HTML
  ExpiresByType text/html "access plus 1 hour"

  # CSS & JS
  ExpiresByType text/css "access plus 1 day"
  ExpiresByType application/javascript "access plus 1 day"

  # Fonts
  ExpiresByType font/woff2 "access plus 1 day"
  ExpiresByType font/woff "access plus 1 day"

  # Images
  ExpiresByType image/jpeg "access plus 1 day"
  ExpiresByType image/png "access plus 1 day"
  ExpiresByType image/webp "access plus 1 day"
  ExpiresByType image/svg+xml "access plus 1 day"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|woff2?|jpg|jpeg|png|webp|svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

# -------------------------------------------------
# CACHE-CONTROL (SAFE)
# -------------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(css|js|jpg|jpeg|png|webp|svg|woff2?|ico)$">
    Header set Cache-Control "public, max-age=31536000"
  </FilesMatch>
</IfModule>

# -------------------------------------------------
# DISABLE ETAG (VERY IMPORTANT)
# -------------------------------------------------
FileETag None
